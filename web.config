<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server/index.ts" verb="*" modules="iisnode" />
    </handlers>
    
    <rewrite>
      <rules>
        <!-- First rule: Serve static files from dist directory -->
        <rule name="Static Assets" stopProcessing="true">
          <match url="^(?!server|api)(.*)$" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="dist/{R:1}"/>
        </rule>

        <!-- Second rule: Handle API and server requests -->
        <rule name="Node Backend" stopProcessing="true">
          <match url="^(api)/?" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="server/index.ts" />
        </rule>

        <!-- Third rule: All other requests go to index.html for client-side routing -->
        <rule name="React Routes" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="dist/index.html"/>
        </rule>
      </rules>
    </rewrite>
    
    <iisnode 
      nodeProcessCommandLine="&quot;%programfiles%\nodejs\node.exe&quot;"
      loggingEnabled="true"
      debuggingEnabled="true"
      devErrorsEnabled="true"
      node_env="production"
      watchedFiles="*.js;*.ts"
      enableXFF="true"
    />

    <!-- Ensure proper MIME types are set -->
    <staticContent>
      <mimeMap fileExtension=".ts" mimeType="application/x-typescript" />
      <mimeMap fileExtension=".tsx" mimeType="application/x-typescript" />
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
  </system.webServer>
</configuration>