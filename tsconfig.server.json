{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",        // Changed from "NodeNext"
    "moduleResolution": "node",  // Changed from "NodeNext"
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/server",
    "rootDir": "./server",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "server/*": ["server/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["src", "tests"]
}