{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",      // Changed from "ESNext"
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/server",
    "rootDir": "./server",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "server/*": ["server/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["src", "tests"]
}